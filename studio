    <script>
        // Animation simple au défilement
        document.addEventListener('DOMContentLoaded', function() {
            // Ajout d'un effet de défilement fluide pour les ancres
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if(targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if(targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // Animation des éléments au défilement
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if(entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);
            
            // Observer les sections
            document.querySelectorAll('section').forEach(section => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';
                section.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                observer.observe(section);
            });
            
            // Remplacer les numéros de téléphone par vos vrais numéros
            const phoneNumber = "+229XXXXXXXXX"; // Remplacez XXXXXXXXX par votre vrai numéro
            const whatsappLinks = document.querySelectorAll('a[href*="wa.me"]');
            const telLinks = document.querySelectorAll('a[href^="tel:"]');
            
            // Mettre à jour les liens WhatsApp
            whatsappLinks.forEach(link => {
                link.href = `https://wa.me/${phoneNumber.replace('+', '')}?text=Bonjour,%20je%20souhaite%20r%C3%A9server%20le%20studio%20%C3%A0%20Avortrou`;
            });
            
            // Mettre à jour les liens téléphone
            telLinks.forEach(link => {
                link.href = `tel:${phoneNumber}`;
            });
        });
    </script>
</body>
</html>